<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<!-- Name the servlet (it's name is used in other elements to refer to this servlet.
	     Specify the servlet's class that will be instantiated by the servlet container. -->
	<servlet>
		<servlet-name>BookShopServlet</servlet-name>
		<servlet-class>kxie.uoa.bookshop.servlet.BookShopServlet</servlet-class>
	</servlet>
 
 	<!-- Specify that the HelloWorld servlet will process requests matching any URI. -->
	<servlet-mapping>
		<servlet-name>BookShopServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

</web-app>
